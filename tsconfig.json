{
  "compilerOptions": {

    "target": "es2016",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true,
    "outDir": "./dist/server",
    "rootDir": "./src/server"                                 
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
