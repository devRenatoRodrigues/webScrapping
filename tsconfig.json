{
  "compilerOptions": {

    "target": "es2016",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true,
    "outDir": "./dist/server",
    "rootDir": "./src",                                 
    "paths": {
      "@interfaces": ["./src/server/interfaces"],
      "@drivers": ["./src/server/drivers"],
      "@useCase": ["./src/server/useCase"],


    }
  },
  "jest": {
    "tsConfig": "./tsconfig.json"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
